    <title>New Game</title>
</head>

<body>

    <h1>Add A New Game</h1>
    <form action="/games" method="POST">
        <div>
            <div class="form-group col-md-6">
                <label>Title</label>
                <input class="form-control" name="title" placeholder="Title">
            </div>
            <div class="form-group col-md-6">
                <label>Release Date</label>
                <input class="form-control" name="releaseDate" placeholder="Date">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Genre</label>
            <input type="text" class="form-control" name="genre"  placeholder="Genre">
        </div>
        <div class="form-group col-md-6">
            <label>Rating</label>
            <input type="number" class="form-control" name="rating"  placeholder="Rating">
        </div>
        <div class="form-group col-md-6">
            <label>Image Link</label>
            <input type="text" class="form-control" name="img"  placeholder="Genre">
        </div>
        <div class="form-group col-md-6">
            <label>Description</label>
            <input type="text" class="form-control" name="description" placeholder= "Description">
        </div>

        <div class="form-group col-md-6">
            <label>Website Address</label>
            <input type="text" class="form-control" name="link" placeholder="Link to Site">
        </div>
        <button type="submit" class="btn btn-primary" value="Create Game">Add Game</button>

